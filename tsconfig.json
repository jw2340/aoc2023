{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "removeComments": true,
    "declaration": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "typeRoots": ["src/types"],
    "paths": {
      "2d-array-rotation": ["./src/types/2d-array-rotation"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.temp.ts",
    "src/types/**"
  ]
}
